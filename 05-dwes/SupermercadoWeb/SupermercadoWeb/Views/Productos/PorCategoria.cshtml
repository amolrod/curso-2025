@model IEnumerable<SupermercadoWeb.Models.Productos>

@{
    ViewData["Title"] = "Productos por Categoría";
}

<h2>Filtrar Productos por Categoria</h2>

<form method="get" asp-action="PorCategoria">
    <label for="categoriaId">Categoria: </label>
    <select name="categoriaId" id="categoriaId" onchange="this.form.submit()">
        <option value="">todas</option>
        @foreach (var cat in ViewBag.Categorias)
        {
            <option value="@cat.Id" selected="@(ViewBag.CategoriaSeleccionada == cat.Id)">@cat.Nombre</option>
        }
    </select>
</form>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Precio</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Categoria?.Nombre</td>
                <td>@producto.Precio?.ToString("C")</td>
                <td>@producto.Stock</td>
            </tr>
        }
    </tbody>
</table>
