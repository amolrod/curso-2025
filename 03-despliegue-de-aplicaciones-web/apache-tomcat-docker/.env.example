# Archivo de entorno para Docker Compose
# Copiar este archivo a .env y ajustar según necesidades

# === CONFIGURACIÓN GENERAL ===
COMPOSE_PROJECT_NAME=apache-tomcat-docker
TZ=Europe/Madrid

# === PUERTOS ===
APACHE_HTTP_PORT=80
APACHE_HTTPS_PORT=443
TOMCAT_HTTP_PORT=8080
TOMCAT_AJP_PORT=8009

# === CREDENCIALES DE TOMCAT ===
# ¡CAMBIAR EN PRODUCCIÓN!
TOMCAT_ADMIN_USER=admin
TOMCAT_ADMIN_PASSWORD=SecurePassword123!
TOMCAT_MANAGER_USER=manager
TOMCAT_MANAGER_PASSWORD=ManagerPass123!

# === CONFIGURACIÓN DE JAVA ===
JAVA_XMS=512m
JAVA_XMX=1024m
JAVA_GC=UseG1GC

# === LÍMITES DE RECURSOS ===
APACHE_MEMORY_LIMIT=512M
TOMCAT_MEMORY_LIMIT=2G
APACHE_CPU_LIMIT=1.0
TOMCAT_CPU_LIMIT=2.0

# === LOGGING ===
APACHE_LOG_LEVEL=warn
TOMCAT_LOG_LEVEL=INFO

# === RED ===
NETWORK_SUBNET=172.20.0.0/16
