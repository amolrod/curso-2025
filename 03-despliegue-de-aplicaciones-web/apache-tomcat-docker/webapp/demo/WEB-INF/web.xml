<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Nombre de la Aplicación -->
    <display-name>Demo Application - Apache Tomcat Docker</display-name>
    
    <!-- Descripción -->
    <description>
        Aplicación de demostración para despliegue en Apache Tomcat con Docker.
        Incluye ejemplos de JSP, sesiones y configuración de proxy con Apache.
    </description>

    <!-- Página de Bienvenida -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Configuración de Sesión -->
    <session-config>
        <!-- Timeout de sesión en minutos (30 minutos) -->
        <session-timeout>30</session-timeout>
        
        <!-- Configuración de cookies -->
        <cookie-config>
            <http-only>true</http-only>
            <!-- Para HTTPS, descomentar: -->
            <!-- <secure>true</secure> -->
        </cookie-config>
        
        <!-- Modo de seguimiento de sesión -->
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- Páginas de Error Personalizadas -->
    <error-page>
        <error-code>404</error-code>
        <location>/error-404.html</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error-500.html</location>
    </error-page>

