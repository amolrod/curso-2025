# Habilitar el motor de reescritura
RewriteEngine On

# Establecer la ruta base
RewriteBase /

# Seguridad: Evitar el acceso directo a archivos de configuración
<FilesMatch "^(config\.php|\.env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger directorios sensibles
Options -Indexes

# Redirecciones amigables para URLs limpias
# Ejemplo: /empleado/5 -> read.php?id=5
RewriteRule ^empleado/([0-9]+)$ read.php?id=$1 [L,QSA]

# Ejemplo: /editar/5 -> update.php?id=5
RewriteRule ^editar/([0-9]+)$ update.php?id=$1 [L,QSA]

# Ejemplo: /eliminar/5 -> delete.php?id=5
RewriteRule ^eliminar/([0-9]+)$ delete.php?id=$1 [L,QSA]

# Ejemplo: /nuevo -> create.php
RewriteRule ^nuevo$ create.php [L,QSA]

# Ejemplo: /empleados -> index.php
RewriteRule ^empleados$ index.php [L,QSA]

# Redireccionar www a no-www (opcional)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Forzar HTTPS (redirigir al puerto correcto 8443)
RewriteCond %{HTTPS} off
RewriteCond %{SERVER_PORT} 8000
RewriteRule ^(.*)$ https://%{SERVER_NAME}:8443%{REQUEST_URI} [L,R=301]

# Configuración de errores personalizados
ErrorDocument 404 /error.php
ErrorDocument 500 /error.php

# Habilitar compresión
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Configuración de caché del navegador
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# Headers de seguridad adicionales
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
