@model IEnumerable<videojuegosev.Models.Desarrolladora>

@{
    ViewData["Title"] = "Desarrolladoras";
}

<h2>@ViewData["Title"]</h2>

<p class="mb-4">Listado de todas las desarrolladoras de videojuegos en nuestra base de datos.</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>País de Origen</th>
            <th>Año de Fundación</th>
            <th class="text-center">Juegos Desarrollados</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Nombre</strong></td>
                <td>@item.PaisOrigen</td>
                <td>@item.AñoFundacion</td>
                <td class="text-center">
                    <span class="badge bg-primary">@item.Videojuegos.Count</span>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <p class="text-muted">Total de desarrolladoras: @Model.Count()</p>
</div>
