@model videojuegosev.Models.Videojuego

@{
    ViewData["Title"] = "Detalles del Videojuego";
}

<h2>@Model.Titulo</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Información General</h5>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <p><strong>Descripción:</strong></p>
                <p class="text-muted">@Model.Descripcion</p>

                <p><strong>Desarrolladora:</strong></p>
                <p class="text-muted">@Model.Desarrolladora.Nombre (@Model.Desarrolladora.PaisOrigen)</p>

                <p><strong>Género:</strong></p>
                <p class="text-muted">@Model.Genero.Nombre - @Model.Genero.Descripcion</p>
            </div>

            <div class="col-md-6">
                <p><strong>Fecha de Lanzamiento:</strong></p>
                <p class="text-muted">@Model.FechaLanzamiento.ToString("dd/MM/yyyy")</p>

                <p><strong>Precio:</strong></p>
                <p class="text-success fs-4">@Model.Precio.ToString("C")</p>
            </div>
        </div>

        <hr />

        <h5 class="card-title mt-4">Plataformas Disponibles</h5>

        @if (Model.VideojuegoPlataformas != null && Model.VideojuegoPlataformas.Any())
        {
            <div class="row mt-3">
                @foreach (var vp in Model.VideojuegoPlataformas)
                {
                    <div class="col-md-3 mb-2">
                        <div class="alert alert-info" role="alert">
                            <strong>@vp.Plataforma.Nombre</strong><br />
                            <small>@vp.Plataforma.Fabricante (@vp.Plataforma.AñoLanzamiento)</small>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No hay plataformas disponibles para este videojuego.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al catálogo</a>
</div>
