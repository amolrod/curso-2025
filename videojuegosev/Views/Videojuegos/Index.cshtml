@model IEnumerable<videojuegosev.Models.Videojuego>

@{
    ViewData["Title"] = "Catálogo de Videojuegos";
}

<h2>@ViewData["Title"]</h2>

<p class="mb-4">Explora nuestra colección de videojuegos disponibles.</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Título</th>
            <th>Desarrolladora</th>
            <th>Género</th>
            <th>Fecha Lanzamiento</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Desarrolladora.Nombre</td>
                <td>@item.Genero.Nombre</td>
                <td>@item.FechaLanzamiento.ToString("dd/MM/yyyy")</td>
                <td>@item.Precio.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <p class="text-muted">Total de videojuegos: @Model.Count()</p>
</div>
